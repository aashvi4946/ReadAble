{
  "name": "ReadAble",
  "version": "1.0.0",
  "author": "Anuja Pandey",
  "description": "A dyslexia friendly Chrome Extension",
  "manifest_version": 3,
  "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  